---
import type { Investment } from "../../types";
import HeroComponent from "./Hero.tsx";

interface Props {
  data: Investment[];
}

const { data } = Astro.props;
---

<HeroComponent client:only="react" data={data} />

<style is:global>
  .hero-row {
    display: flex;
    column-gap: 1rem;
    justify-content: center;
  }
  .hero-column {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-items: center;
    padding-top: 2rem;
  }
  .hero-title {
    font-size: 2rem;
  }

  .prices-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    width: 100%;
    max-width: 250px;
    gap: 0.4rem;
  }

  .prices-item {
    display: flex;
    justify-content: space-between;
    font-size: 1.5rem;
    border: 1px solid grey;
    border-radius: 1rem;
    padding: 0.3rem 0.5rem;
  }

  .rewards-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    width: 100%;
    gap: 0.4rem;
  }

  .rewards-item {
    display: flex;
    justify-content: space-between;
    font-size: 1.5rem;
    border: 1px solid grey;
    border-radius: 1rem;
    padding: 0.3rem 0.5rem;
  }

  @media screen and (max-width: 640px) {
    .hero-row {
      flex-direction: column;
      align-items: center;
    }


    .prices-wrapper, .rewards-wrapper {
      padding: 1rem 0 2rem;
      max-width: 100%;
      width: 100%;
    }
    .rewards-item, .prices-item {
      width: 100%;
    }

    .prices-wrapper {
      margin: 0 auto;
      max-width: 80%;
    }
  }
</style>
