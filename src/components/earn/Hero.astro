---
import type { Account, AccountParameters, Investment } from "../../types";
import HeroComponent from "./Hero.tsx";

interface Props {
  investments: Investment[];
  accounts: Account[];
  accountParameters: AccountParameters;
}

const { investments, accounts, accountParameters } = Astro.props;
---

<HeroComponent client:only="react" investments={investments} accounts={accounts} accountParameters={accountParameters} />

<style is:global>
  .hero-wrapper {
    width: 100%;
  }
  .hero-row {
    display: flex;
    column-gap: 1rem;
    justify-content: center;
  }
  .hero-column {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-items: center;
    padding-top: 2rem;
  }
  .hero-title {
    font-size: 1.75rem;
  }
  .hero-subtitle {
    font-size: 1.5rem;
  }

  .prices-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    width: 100%;
    max-width: 250px;
    gap: 0.4rem;
  }

  .prices-item {
    display: flex;
    justify-content: space-between;
    font-size: 1.5rem;
    border: 1px solid grey;
    border-radius: 1rem;
    padding: 0.3rem 0.5rem;
    width: 100%;
  }

  .rewards-wrapper {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    width: 100%;
    gap: 0.4rem;
  }

  .rewards-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    font-size: 1.5rem;
    border: 1px solid grey;
    border-radius: 1rem;
    padding: 0.4rem 0.6rem;
  }

  .rewards-item div {
    width: 100%;
    display: flex;
    justify-content: space-between;
  }

  .pt-4 {
    padding-top: 1rem;
  }

  @media only screen and (max-width: 768px) {
    .hero-wrapper {
      width: 100%;
    }
    .hero-row {
      flex-direction: column;
      align-items: center;
    }

    .prices-wrapper {
      padding: 1rem 0 0;
    }

    .rewards-wrapper {
      padding: 1rem 0 2rem;
      max-width: 100%;
      width: 100%;
    }
    .prices-item {
      width: 100%;
    }

    .prices-wrapper {
      margin: 0 auto;
      max-width: 80%;
    }
    .hero-column {
      width: calc(100% - 2rem);
      padding-right: 1rem;
      padding-left: 1rem;
    }
    .hero-column:first-child {
      padding-top: 0;
    }
  }
</style>
